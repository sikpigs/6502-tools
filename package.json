{
  "name": "6502-tools",
  "displayName": "6502 Tools",
  "description": "Status bar buttons for build/flash and task setup for 6502/65C02 projects (ca65/ld65 + minipro).",
  "categories": [
    "Other"
  ],
  "keywords": [
    "6502",
    "65C02",
    "ca65",
    "ld65",
    "minipro",
    "EEPROM",
    "retrocomputing"
  ],
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.108.1"
  },
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "6502-tools.installTasks",
        "title": "6502 Tools: Install/Update Tasks"
      },
      {
        "command": "6502-tools.build",
        "title": "6502 Tools: Build Project"
      },
      {
        "command": "6502-tools.flash",
        "title": "6502 Tools: Flash EEPROM"
      },
      {
        "command": "6502-tools.buildFlash",
        "title": "6502 Tools: Build + Flash"
      }
    ],
    "configuration": {
      "title": "6502 Tools",
      "properties": {
        "6502-tools.buildTaskLabel": {
          "type": "string",
          "default": "Build (CMake)",
          "description": "Label of the VS Code task to build."
        },
        "6502-tools.flashTaskLabel": {
          "type": "string",
          "default": "Flash EEPROM (minipro)",
          "description": "Label of the VS Code task to flash."
        },
        "6502-tools.buildFlashTaskLabel": {
          "type": "string",
          "default": "Build + Flash",
          "description": "Label of the VS Code task that builds and then flashes."
        },
        "6502-tools.showButtons": {
          "type": "boolean",
          "default": true,
          "description": "Show 6502 Tools buttons in the status bar."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/vscode": "^1.108.1",
    "@vscode/test-cli": "^0.0.12",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.39.2",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.52.0",
    "webpack": "^5.104.1",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "jsonc-parser": "^3.3.1"
  }
}